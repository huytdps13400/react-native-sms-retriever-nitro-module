{
  "name": "@huymobile/react-native-sms-retriever-nitro-module",
  "version": "1.0.2",
  "description": "A react native android sms retriever api library with Nitro module support for new architecture, old architecture, Nitro module, and Expo compatibility",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/src/index.d.ts",
      "bun": "./lib/bun/index.js",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "nitrogen",
    "nitro.json",
    "app.plugin.js",
    "react-native.config.js",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-sms-retriever-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build lib",
    "build": "tsc src/index.ts --outDir lib/module --declaration --declarationDir lib/typescript/src --target ES2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --jsx react-jsx --skipLibCheck",
    "release": "release-it --only-version",
    "bun:install": "bun install",
    "bun:build": "bun build ./src/index.ts --outdir ./lib/bun --target node --format esm --sourcemap=external --minify --external react --external react-native --external react-native-nitro-modules",
    "bun:link": "bun link",
    "bun:example": "cd example && bun install",
    "bun:all": "bun run bun:install && bun run bun:build && bun run bun:link && bun run bun:example"
  },
  "keywords": [
    "react-native",
    "android",
    "sms",
    "otp",
    "sms-retriever",
    "turbo-module",
    "nitro-module",
    "expo",
    "new-architecture",
    "old-architecture",
    "sms-retriever",
    "sms-retriever-nitro",
    "sms-android",
    "one-time-password",
    "one-time-password-nitro",
    "one-time-password-expo",
    "one-time-password-new-architecture",
    "one-time-password-old-architecture",
    "one-time-password-android",
    "one-time-password-ios",
    "one-time-password-web",
    "bun"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huytdps13400/react-native-sms-retriever-nitro-module.git"
  },
  "author": {
    "name": "Huy Tran",
    "email": "huytdps13400@gmail.com",
    "url": "https://github.com/huytdps13400"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huytdps13400/react-native-sms-retriever-nitro-module/issues"
  },
  "homepage": "https://github.com/huytdps13400/react-native-sms-retriever-nitro-module#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "contributors": [
    {
      "name": "Huy Tran",
      "email": "huytdps13400@gmail.com",
      "url": "https://github.com/huytdps13400"
    }
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@evilmartians/lefthook": "^1.12.3",
    "@react-native-community/cli": "20.0.1",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "^0.81.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nitrogen": "^0.29.8",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.81.1",
    "react-native-builder-bob": "latest",
    "react-native-nitro-modules": "^0.29.8",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "trustedDependencies": [
    "react-native-nitro-modules",
    "nitrogen"
  ],
  "bun": {
    "enabled": true,
    "lockfileFormat": "bun"
  },
  "resolutions": {
    "react": "19.1.0",
    "react-native": "0.81.1",
    "@types/react": "^19.1.0",
    "glob": "^9.0.0",
    "rimraf": "^4.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "SMSRetrieverSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.smsretriever"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin",
    "type": "turbo-module",
    "version": "0.54.3"
  },
  "nitro": {
    "name": "SMSRetriever",
    "ios": false,
    "android": {
      "namespace": "com.smsretriever"
    }
  }
}
